@{
    ViewData["Title"] = "GolfHobby";
}

<div class="calculator-container">
    <input type="number" id="hours" placeholder="Enter number of hours" min="1">
    <div>
        <label for="hourlyRate">Hourly Rate:</label>
        <input type="text" id="hourlyRate" value="50" readonly>
    </div>
    <button id="calculate">Calculate Total</button>
    <div>
        <label for="totalCharge">Total Charge:</label>
        <input type="text" id="totalCharge" readonly>
    </div>
</div>
